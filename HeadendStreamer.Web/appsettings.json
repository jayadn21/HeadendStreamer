{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/headend-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HeadendStreamer": {
    "ConfigDirectory": "configs",
    "LogDirectory": "logs",
    "FfmpegPath": "D:\\Softs\\ffmpeg\\ffmpeg-2026-01-05-git-2892815c45-full_build\\bin\\ffmpeg",
    "DefaultMulticastBase": "239.255.255",
    "DefaultPortRange": {
      "Start": 1234,
      "End": 1334
    },
    "AutoRestart": true,
    "HealthCheckInterval": 30,
    "MaxLogFiles": 10,
    "MaxLogSizeMB": 10
  }
}