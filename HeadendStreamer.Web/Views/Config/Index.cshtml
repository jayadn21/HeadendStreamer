@model IEnumerable<HeadendStreamer.Web.Models.ViewModels.StreamViewModel>
@{
    ViewData["Title"] = "Configurations";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-cogs me-2 text-secondary"></i>Stream Configurations</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> New Config
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No configurations found</h4>
                <a asp-action="Create" class="btn btn-primary mt-3">Create First Stream</a>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered bg-white shadow-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Source</th>
                                <th>Destination</th>
                                <th>Enabled</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            var config = item.Config;
                                            var status = item.Status;
                                        }
                                        <strong>@config.Name</strong>
                                        @if (!string.IsNullOrEmpty(config.Description))
                                        {
                                            <br /><small class="text-muted">@config.Description</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@config.InputFormat</span>
                                        <small>@config.InputDevice</small>
                                    </td>
                                    <td>
                                        <code>udp://@config.MulticastIp:@config.Port</code>
                                    </td>
                                    <td>
                                        @if (config.Enabled)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (status?.IsRunning == true)
                                        {
                                            <span class="badge bg-success shadow-sm">
                                                <i class="fas fa-circle-play me-1"></i> Live
                                            </span>
                                            <br />
                                            <small class="text-muted" style="font-size: 0.75rem;">
                                                <i class="fas fa-microchip me-1"></i> @status.CpuUsage.ToString("F1")%
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary opacity-75">
                                                <i class="fas fa-stop-circle me-1"></i> Stopped
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (status?.IsRunning == true)
                                            {
                                                <button class="btn btn-warning stop-stream" data-id="@config.Id" title="Stop">
                                                    <i class="fas fa-stop"></i>
                                                </button>
                                                <button class="btn btn-info restart-stream" data-id="@config.Id" title="Restart">
                                                    <i class="fas fa-sync-alt"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-success start-stream" data-id="@config.Id" title="Start">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            }
                                            <a asp-controller="Stream" asp-action="Details" asp-route-id="@config.Id" class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@config.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-outline-danger delete-config" data-id="@config.Id" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-config').forEach(btn => {
            btn.addEventListener('click', async function() {
                if (!confirm('Are you sure you want to delete this configuration?')) return;
                
                const id = this.getAttribute('data-id');
                try {
                    const response = await fetch(`/api/config/${id}`, { method: 'DELETE' });
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete config');
                    }
                } catch (e) {
                    alert('Error deleting config');
                }
            });
        });

        async function controlStream(id, action) {
            try {
                const response = await fetch(`/api/stream/${id}/${action}`, { method: 'POST' });
                if (response.ok) {
                    location.reload();
                } else {
                    const data = await response.json();
                    alert(`Failed to ${action} stream: ${data.error || 'Unknown error'}`);
                }
            } catch (e) {
                alert(`Error during ${action} operation`);
            }
        }

        document.querySelectorAll('.start-stream').forEach(btn => {
            btn.addEventListener('click', function() {
                controlStream(this.getAttribute('data-id'), 'start');
            });
        });

        document.querySelectorAll('.stop-stream').forEach(btn => {
            btn.addEventListener('click', function() {
                controlStream(this.getAttribute('data-id'), 'stop');
            });
        });

        document.querySelectorAll('.restart-stream').forEach(btn => {
            btn.addEventListener('click', function() {
                controlStream(this.getAttribute('data-id'), 'restart');
            });
        });
    </script>
}
